				POSXY(cpt,i)
				ECRIRE(" ")
				cpt<-cpt+1
				
				SI (i=DECALAGE+8 DIV 2) ALORS
					POSXY(cpt-2,i+1)
					ECRIRE(" ")
				FINSI
			FINPOUR
			COULEURFOND(NOIR)
		
