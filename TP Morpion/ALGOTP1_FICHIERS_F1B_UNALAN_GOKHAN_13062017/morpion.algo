	*
***********************************************************************************}
//ALGORITHME MORPION

{La fonction POSXY  que j'utilise permet de placer le curseur à l'indice x = horizontal , y=vertical donné en paramètre.
Elle est relative au point d'origine de la fenêtre qui est en (1,1), en haut à gauche.
Si l'on recopie cette algorithme en un autre language, le résultat des coordonnées devraient être juste.

La fonction COULEURFOND permet de changer la couleur du fond d'un texte.

La fonction COULEURPOLICE permet de changer la couleur de la police d'écriture.}

CONST
	TAILLEX=30 //taille x de la grille du jeu
	TAILLEY=30	//taille y de la grille du jeu
	DECALAGE=5	//décalage de la grille
	DECALAGECONSOLEX=41	//décalage de la grille du jeu pour écrire sur la droite
	DECALAGECONSOLEY=6	//décalage de la hauteur du jeu
	
TYPE
	player=ENREGISTREMENT	//type record pour stocker les infos des joueurs
		pseudo:CHAINE	//le pseudo
		manches:ENTIER	//le nombre de manche gagné
		nbrCoups:TABLEAU [1..9] DE ENTIER	//le nombre de coups joué
		forme:ENTIER	//rond ou croix
	FINENREGISTREMENT

TYPE
	tChar= TABLEAU [1..9] DE CARACTERE	//tableau de caractère pour la grille
	tJoueur= TABLEAU [1..2] DE player	// tableau du type joueur pour les 2 joueurs


{*************************PROCEDURE***//***FONCTION*******************************
	 *_____BUT:afficher la grille d'aide
	 *__ENTREE:2 entier
	 *__SORTIE:grille d'aide afficher
*********************************************************************************}
PROCEDURE afficherAide()
VAR
	x,y:ENTIER
DEBUT
	POSXY(42,15)
	ECRIRE("Numero des cases")
	COULEURFOND(BLANC)
	
	//début affichage par rapport au coordonné x,y de la console
	POUR y<-16 A 28 FAIRE
		POUR x<- DECALAGECONSOLEX A DECALAGECONSOLEY+18 FAIRE
			SI x=DECALAGECONSOLEX ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (x=(18 DIV 3)+DECALAGECONSOLEX) ALORS
				POSXY(x,y)
				ECRIRE(" ")
				SI y=20 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("1")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
				SINONSI y=24 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("4")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
				SINONSI y=28 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("7")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
			SINONSI (x=(18 DIV 3)+((18 DIV 3)+DECALAGECONSOLEX)) ALORS
				POSXY(x,y)
				ECRIRE(" ")
				
				SI y=20 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("2")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
				SINONSI y=24 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("5")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
				SINONSI y=28 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("8")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
			SINONSI (x=DECALAGECONSOLEX+18) ALORS
				POSXY(x,y)
				ECRIRE(" ")
				
				SI y=20 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("3")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
				SINONSI y=24 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("6")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
				SINONSI y=28 ALORS
					COULEURFOND(NOIR)
					COULEURPOLICE(ROUGE)
					POSXY(x-3,y-2)
					ECRIRE("9")
					COULEURFOND(BLANC)
					COULEURPOLICE(BLANC)
				FINSI
			FINSI
			
			SI (y=16) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (y=(12 DIV 3)+16) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (y=(12 DIV 3)+(12 DIV 3)+16) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (t=28) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
				
		FINPOUR
	FINPOUR
	
FINPROCEDURE
//********************FIN***PROCEDURE***//***FONCTION*****************************


{*************************PROCEDURE***//***FONCTION*******************************
	 *_____BUT:affiche la grille du jeu
	 *__ENTREE: 2 entier en local
	 *__SORTIE:grille afficher à l'écran
*********************************************************************************}
PROCEDURE afficherGrille()
VAR
	x,y:ENTIER
DEBUT

	COULEURFOND(BLANC)
	
	POUR y<-DECALAGE A TAILLEY+DECALAGE FAIRE
		POUR x<-DECALAGE A TAILLEX+DECALAGE FAIRE
			
			SI (y=DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (TAILLEY DIV 3= y-DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI ((TAILLEY DIV 3)+(TAILLEY DIV 3)=y-DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (TAILLEY=y-DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			
			SI (x=DECALAGE) ET (y<>DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (TAILLEX DIV 3 = x-DECALAGE) ET (y<>DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI ((TAILLEX DIV 3)+(TAILLEX DIV 3)=x-DECALAGE) ET (y<>DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			SINONSI (TAILLEX=x-DECALAGE) ET (y<>DECALAGE) ALORS
				POSXY(x,y)
				ECRIRE(" ")
			FINSI
			
		FINPOUR
	FINPOUR
	
	COULEURFOND(NOIR)

FINPROCEDURE
//********************FIN***PROCEDURE***//***FONCTION*****************************


{*************************PROCEDURE***//***FONCTION*******************************
	 *_____BUT:affiche une croix à l'écran
	 *__ENTREE:2 entier en local
	 *__SORTIE:croix afficher
*********************************************************************************}
PROCEDURE afficherCroix(emplacement:ENTIER)
VAR
	i,cpt:ENTIER
DEBUT
	cpt<-DECALAGE+2
	
	CAS emplacement PARMIS
		1:COULEURFOND(ROUGE)
			
			POUR i<-DECALAGE+2 A DECALAGE+8 FAIRE
